<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th><%= Order.human_attribute_name(:accession_number) %></th>
      <th><%= Order.human_attribute_name(:referring_physicians_name) %></th>
      <th><%= Order.human_attribute_name(:patients_name) %></th>
      <th><%= Order.human_attribute_name(:patient_id) %></th>
      <th><%= Order.human_attribute_name(:patients_birth_date) %></th>
      <th><%= Order.human_attribute_name(:patients_sex) %></th>
      <th><%= Order.human_attribute_name(:study_instance_uid) %></th>
      <th><%= Order.human_attribute_name(:requested_procedure_description) %></th>
      <th><%= Order.human_attribute_name(:modality) %></th>
      <th><%= Order.human_attribute_name(:scheduled_date) %></th>
      <th><%= Order.human_attribute_name(:scheduled_station_ae_title) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.accession_number %></td>
        <td><%= order.referring_physicians_name %></td>
        <td><%= order.patients_name %></td>
        <td><%= order.patient_id %></td>
        <td><%= order.patients_birth_date %></td>
        <td><%= order.patients_sex %></td>
        <td><%= order.study_instance_uid %></td>
        <td><%= order.requested_procedure_description %></td>
        <td><%= order.modality %></td>
        <td><%= order.scheduled_date %></td>
        <td><%= order.scheduled_station_ae_title %></td>
        <td><%# link_to 'Show', order %></td>
        <td><%# link_to 'Edit', edit_order_path(order) %></td>
        <td><%# link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

